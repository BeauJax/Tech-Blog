<section class="sign-in-page">
    <div class="form-heading">
        <h1>Create New Account</h1>
    </div>
    <div class="form-section">
        <form class="signup-form">
            <div>
                <label for="username-signup">Username:</label>
                <input type="text" class="entry-field" id="username-signup" />
            </div>
            
            <div>
                 <label for="email-signup">email:</label>
                 <input type="text" id="email-signup" />
             </div>
            
            <div>
                <label for="password-signup">Passowrd</label>
                <input type="password" class="entry-field" id="password-signup" />
            </div>
            <div>
                <button type="submit" class="login-signup-btn">Create Account</button>
            </div>
        </form>
    </div>

    <a href="/login" class="login-link">log in instead</a>
</section>

<script src="/javascript/signup.js"></script>